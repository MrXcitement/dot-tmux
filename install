#!/usr/bin/env bash

# install -- make symbolic links in the users home directory
# Mike Barker <mike@thebarkers.com>
# May 14th, 2013

# 2016.10.01 MRB
# Modified to install tmux config file

# 2017.10.04 MRB
# - Generalized install script, installs everthing under the 'home' folder into
# the users $HOME folder.

# Backup a file/directory by renaming it with the current date and time
backup_file() {
	local file=$1
	local file_ext=$(date +%Y%m%d%H%M)

	if [ -e ${file} ]; then
		if ! [ -h ${file} ]; then
			echo "Backing up ${file} to: ${file}.${file_ext}"
			mv ${file} ${file}.${file_ext}
		fi
	fi
}

# create a symbolic link if one does not allready exist
link_file() {
    local src=$1
    local dst=$2

    if ! [ -e ${dst} ]; then
        echo "Linking file ${dst}"
        ln -sfnv ${src} ${dst}
    fi
}

DIR="$(cd "$(dirname "$0")" && pwd)"
pushd "${DIR}"

SRC_DIR=${DIR}/home
DST_DIR=${HOME}

# Link all items in the home directory to the users home directory
for file in $(ls -A1 "${SRC_DIR}"); do
    backup_file ${HOME}/$file
    link_file ${SRC_DIR}/$file ${DST_DIR}/$file
done
